# Database (SQLite for development - no additional setup required)
DATABASE_URL=sqlite:///./data/legal_assistant.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=legal_sections

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI/ML APIs
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
AI_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-small

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
ECOURTS_API_KEY=
ECOURTS_API_URL=https://services.ecourts.gov.in/ecourtindia_v6/

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx

# Application
APP_NAME=India Legal Assistance AI Platform
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security
ENCRYPTION_KEY=your-encryption-key-32-bytes-long
ANONYMOUS_SESSION_EXPIRE_HOURS=24
